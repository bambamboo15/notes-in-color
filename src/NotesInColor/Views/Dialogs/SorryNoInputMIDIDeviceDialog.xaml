<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="NotesInColor.Views.Dialogs.SorryNoInputMIDIDeviceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotesInColor.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- ContentDialog that shows up when a user tries to activate Practice Mode with no MIDI input device plugged in -->
    <Grid>
        <TextBlock TextWrapping="Wrap"
                   MaxWidth="420"
                   Text="Unfortunately, you don't have a MIDI input device plugged in, which means you can't practice this song. If you can, plug one in!" />
    </Grid>
</UserControl>
